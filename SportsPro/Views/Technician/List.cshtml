@{
}
@model IEnumerable<SportsPro.Models.Technician>


<h2>Technician List</h2>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Specialty</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tech in Model)
        {
            <tr>
                <td>@tech.TechnicianID</td>
                <td>@tech.Name</td>
                <td>@tech.Email</td>
                <td>@tech.Phone</td>
                <td>
                    <a asp-controller="Technician" asp-action="Edit" asp-route-id="@tech.TechnicianID"
                       class="list-group-item">Edit</a>
                </td>
                <td>
                    <a asp-controller="Technician" asp-action="Delete" asp-route-id="@tech.TechnicianID"
                       class="list-group-item">Delete</a>
                </td>

            </tr>
        }

        <tr>
            <td>
                <a asp-controller="Technician" asp-action="Add"
                   class="list-group-item">Add Technician</a>
            </td>
        </tr>
    </tbody>
</table>

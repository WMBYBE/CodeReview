@model IncidentEditViewModel
@using Microsoft.AspNetCore.Http

@{
    string title = Model.Mode + " Incident";
    ViewBag.Title = title;
    Layout = "_Layout";
}

<h2>@title</h2>

@await Html.PartialAsync("_ValidationScriptspartial")

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Incident.CustomerID">Customer</label>
        <customer-select asp-for="Incident.CustomerID"
                selected-customer-id="@Model.Incident.CustomerID">
        </customer-select>
    </div>
    <div class="form-group">
        <label asp-for="Incident.ProductID">Product</label>
        <product-select asp-for="Incident.ProductID" 
        select-product-id="@Model.Incident.ProductID"></product-select>
    </div>

    <div class="form-group">
        <label asp-for="Incident.Title">Title</label>
        <input asp-for="Incident.Title" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Incident.Description">Description</label>
        <input asp-for="Incident.Description" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Incident.TechnicianID">Technician</label>
        <technician-select asp-for="Incident.TechnicianID"
                        select-technician-id="@Model.Incident.TechnicianID"></technician-select>
    </div>
    <div class="form-group">
        <label asp-for="Incident.DateOpened">Date Opened</label>
        <input asp-for="Incident.DateOpened" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Incident.DateClosed">Date Closed</label>
        <input asp-for="Incident.DateClosed" class="form-control">
    </div>

    

    <input type="hidden" asp-for="Incident.IncidentID" />

    <button type="submit" class="btn btn-primary">@Model.Mode</button>
    @if (Context.Session.GetInt32("TechnicianID").HasValue)
    {
        <a asp-area="" asp-controller="Incident" asp-action="ListByTech" asp-route-id="@Context.Session.GetInt32("TechnicianID")" class="btn btn-primary">Cancel</a>

    }else
    {
        <a asp-area="" asp-controller="Incident" asp-action="List" class="btn btn-primary">Cancel</a>
    }
</form>
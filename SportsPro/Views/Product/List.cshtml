@model List<Product>
<table class="table table-bordered table-striped">
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @product.ProductCode
                </td>
                <td>
                    @product.Name
                </td>
                <td>
                    @product.YearlyPrice
                </td>
                <td>
                    @product.ReleaseDate
                </td>
                <td>
                    <a asp-controller="Product" asp-action="Update" asp-route-id="@product.ProductID" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <button asp-controller="Product" asp-action="Delete" type="button" class="btn btn-primary">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>
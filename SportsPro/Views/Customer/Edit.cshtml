@model Customer
@{
    string title = ViewBag.Action + " Incident";
    ViewBag.Title = title;
    Layout = "_Layout";
}

<h2>@title</h2>

<form asp-action="edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PostalCode">Postal Code</label>
        <input asp-for="PostalCode" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CountryID">Country</label>
        <select asp-for="CountryID"
                asp-items="@(new SelectList(ViewBag.Countries,
                    "CountryID", "Name",
                    Model.CountryID.ToString()))"
                class="form-control">
            <option value="">Select a Country...</option>
        </select>
        <span asp-validation-for="CountryID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <input asp-for="CustomerID" hidden />
    </div>

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index"
        class="btn btn-primary">Cancel
    </a>

</form>